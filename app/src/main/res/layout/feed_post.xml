<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="match_parent"
        xmlns:tools="http://schemas.android.com/tools">
    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/icon_image"
            style="@style/icon"
            android:src="@drawable/person"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:id="@+id/username_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="smth"
            app:layout_constraintTop_toTopOf="@id/icon_image"
            app:layout_constraintBottom_toBottomOf="@id/icon_image"
            app:layout_constraintStart_toEndOf="@id/icon_image"
            android:textColor="@color/black"
            android:textStyle="bold"/>
    <ImageView
            style="@style/icon"
            android:src="@drawable/ic_more"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/icon_image"
            app:layout_constraintBottom_toBottomOf="@id/icon_image"/>
    <ImageView
            android:id="@+id/photo_image"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/placeholder"
            app:layout_constraintBottom_toTopOf="@id/likes_image"
            app:layout_constraintTop_toBottomOf="@id/icon_image"/>
    <ImageView
            android:id="@+id/likes_image"
            style="@style/icon"
            android:src="@drawable/ic_likes_border"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/likes_text"
            app:layout_constraintTop_toBottomOf="@id/photo_image"/>
    <ImageView
            android:id="@+id/comments_image"
            style="@style/icon"
            android:src="@drawable/ic_comments"
            app:layout_constraintStart_toEndOf="@id/likes_image"
            app:layout_constraintTop_toTopOf="@id/likes_image"
            app:layout_constraintBottom_toBottomOf="@id/likes_image"/>
    <ImageView
            android:id="@+id/share_image"
            style="@style/icon"
            android:src="@drawable/icon_share"
            app:layout_constraintStart_toEndOf="@id/comments_image"
            app:layout_constraintTop_toTopOf="@id/likes_image"
            app:layout_constraintBottom_toBottomOf="@id/likes_image"/>
    <TextView
            android:id="@+id/likes_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="416,123 likes"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/caption_text"
            app:layout_constraintTop_toBottomOf="@id/likes_image"
            android:layout_marginStart="10dp"/>
    <TextView
            android:id="@+id/caption_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="smth This is a caption for the picture. Imma make it long as far as a can loooooool."
            app:layout_constraintStart_toStartOf="parent"
            android:paddingStart="10dp"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/likes_text"
            app:layout_constraintBottom_toBottomOf="parent"/>


</android.support.constraint.ConstraintLayout>