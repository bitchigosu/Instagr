<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="match_parent"
        tools:context=".activities.HomeActivity"
        android:background="@color/white">

    <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            style="@style/toolbar">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:id="@+id/username_text"
                    style="@style/toolbar_title"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            <ImageView style="@style/icon"
                       android:id="@+id/add_friends_image"
                       app:layout_constraintEnd_toStartOf="@id/settings_image"
                       app:layout_constraintTop_toTopOf="parent"
                       app:layout_constraintBottom_toBottomOf="parent"
                       android:src="@drawable/ic_add_friends"/>

            <ImageView style="@style/icon"
                       android:id="@+id/settings_image"
                       app:layout_constraintEnd_toEndOf="parent"
                       app:layout_constraintTop_toTopOf="parent"
                       app:layout_constraintBottom_toBottomOf="parent"
                       android:src="@drawable/ic_more"/>

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.Toolbar>

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="100dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:1"
            android:src="@drawable/person"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            app:civ_border_color="@color/grey"
            app:civ_border_width="1dp"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="2"/>
    <TextView
            android:id="@+id/name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/profile_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/bio_text"
            android:text="@string/app_name"
            android:layout_marginStart="15dp"
            style="@style/profile_text_count"/>
    <TextView
            android:id="@+id/bio_text"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/name_text"
            app:layout_constraintStart_toStartOf="@id/name_text"
            app:layout_constraintBottom_toTopOf="@id/website_text"
            android:text="Biography"
            style="@style/profile_text"
            android:layout_marginTop="10dp"/>
    <TextView
            android:id="@+id/website_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/bio_text"
            app:layout_constraintStart_toStartOf="@id/name_text"
            app:layout_constraintBottom_toTopOf="@id/followers_count_text"
            android:layout_marginTop="3dp"
            android:textColor="@color/blue"
            android:text="https://site.com"/>

    <TextView
            android:text="100"
            style="@style/profile_text_count"
            app:layout_constraintStart_toStartOf="@id/name_text"
            app:layout_constraintTop_toBottomOf="@id/website_text"
            app:layout_constraintBottom_toTopOf="@id/edit_profile_button"
            android:layout_marginTop="15dp"
            android:id="@+id/followers_count_text"/>
    <TextView
            android:text="Followers"
            style="@style/profile_text_count"
            app:layout_constraintStart_toEndOf="@id/followers_count_text"
            app:layout_constraintEnd_toStartOf="@id/following_count_text"
            app:layout_constraintBaseline_toBaselineOf="@id/followers_count_text"
            android:layout_marginStart="3dp"
            android:id="@+id/followers_text"/>
    <TextView
            android:text="95"
            app:layout_constraintBaseline_toBaselineOf="@id/followers_count_text"
            app:layout_constraintStart_toEndOf="@id/followers_text"
            app:layout_constraintEnd_toStartOf="@id/Following_text"
            android:layout_marginStart="10dp"
            style="@style/profile_text_count"
            android:id="@+id/following_count_text"/>
    <TextView
            android:text="Following"
            style="@style/profile_text_count"
            app:layout_constraintBaseline_toBaselineOf="@id/followers_count_text"
            app:layout_constraintStart_toEndOf="@id/following_count_text"
            android:layout_marginStart="3dp"
            android:id="@+id/Following_text"/>

    <Button android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/edit_profile_button"
            android:minHeight="0dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:textSize="14sp"
            android:background="@drawable/button_bg"
            app:layout_constraintTop_toBottomOf="@id/followers_count_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Edit Profile"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:textAllCaps="false"
            app:layout_constraintHorizontal_weight="5"/>

    <android.support.v7.widget.RecyclerView
            android:id="@+id/images_recycler"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/top_border_grey"
            app:layout_constraintTop_toBottomOf="@id/edit_profile_button"
            app:layout_constraintBottom_toTopOf="@id/bottom_navigation_view">

    </android.support.v7.widget.RecyclerView>

    <include layout="@layout/bottom_navigation_view"/>


</android.support.constraint.ConstraintLayout>

